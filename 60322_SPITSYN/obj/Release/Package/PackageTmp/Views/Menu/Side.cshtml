@model IEnumerable<string>
<!-- получение названия текущей группы из запроса -->
@{var txt = Request.RequestContext.RouteData.Values["category"] ?? "Все группы";}
<h3>Выберите группу</h3>
<div class="btn-group">
    <button type="button" class="btn btn-default">@txt</button>
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
        <!-- первый элемент в списке - Все группы -->
        <li>
            <a href="@Url.Action("List","SportInv")">
                Все группы
            </a>
        </li>
        <!-- формирование остального списка -->
        @{
            foreach (var item in Model)
            {
                <li>
                    <a href="@Url.Action("List","SportInv",new{category=item})">
                        >
                        @item
                    </a>
                </li>
            }
        }
    </ul>
</div>
